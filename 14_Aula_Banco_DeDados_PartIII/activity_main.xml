<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="60dp" android:layout_marginLeft="60dp" android:layout_marginTop="52dp" android:text="@string/texto" android:textAppearance="@style/TextAppearance.AppCompat.Display2" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <EditText android:id="@+id/nomeIn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="84dp" android:layout_marginLeft="84dp" android:layout_marginTop="33dp" android:ems="10" android:hint="@string/nome" android:inputType="textPersonName" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText android:id="@+id/cursoIn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="84dp" android:layout_marginLeft="84dp" android:layout_marginTop="32dp" android:ems="10" android:hint="@string/curso" android:inputType="textPersonName" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/nomeIn"/>
    <Button android:id="@+id/btSave" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="84dp" android:layout_marginLeft="84dp" android:layout_marginTop="44dp" android:text="@string/insert" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/cursoIn"/>
    <Button android:id="@+id/btSelect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="52dp" android:layout_marginLeft="52dp" android:layout_marginTop="44dp" android:text="@string/select" app:layout_constraintStart_toEndOf="@+id/btSave" app:layout_constraintTop_toBottomOf="@+id/cursoIn"/>

    <Button
        android:id="@+id/btSelecionarTodos"
        android:layout_width="113dp"
        android:layout_height="55dp"
        android:layout_marginStart="222dp"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="34dp"
        android:text="@string/selecionarAll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btSelect" />

</android.support.constraint.ConstraintLayout>